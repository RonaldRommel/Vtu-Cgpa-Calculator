<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs")%> <%- include("./partials/navbar.ejs")%>
  <body>
    <div class="container">
      <div class="cgpa_calculator align-items-center">
        <center>
          <h2><i><%= sem%></i></h2>
          <br />
          <%var x=0; subjects.forEach(sub=>{%><label for="<%=++x%>"
            ><%=sub%></label
          >
          <input type="text" id="<%=x%>" max="100" min="0" /><br /><br /><% })
          %>
          <button
            class="btn btn-sm btn-primary"
            onclick="cal_sgpa('<%= sem%>')"
          >
            Calculate
          </button>
          <button class="btn btn-sm btn-danger" onclick="reset_sgpa()">
            Reset</button
          ><br /><br />
          <div class="row justify-content-center">
            <div class="mt-2">
              <label for="s1sgpa" class="s1sgpa">SGPA</label>
              <input
                type="text"
                id="s1sgpa"
                class="border border-dark"
                disabled
              />
            </div>
            <br /><br />
          </div>
        </center>
      </div>
      <br />
    </div>
  </body>
</html>
